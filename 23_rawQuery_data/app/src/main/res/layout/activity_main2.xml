<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity" android:id="@+id/page2">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Data:"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/queryText"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.022"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/city_query" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.068" android:hint="city : "
            app:layout_constraintHorizontal_bias="0.043"/>
    <Button
            android:text="Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchCity" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintVertical_bias="0.068" android:onClick="searchData"/>
    <Button
            android:text="Show All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/searchAll" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.485"
            app:layout_constraintVertical_bias="0.157" android:onClick="searchData"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="410dp" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.803"
            android:scrollbars="horizontal|vertical"
            android:id="@+id/scrollView2" app:layout_constraintTop_toBottomOf="@+id/queryText">
        <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@+id/scrollView2"
                app:layout_constraintStart_toStartOf="@+id/scrollView2"
                app:layout_constraintEnd_toEndOf="@+id/scrollView2"
                app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
                app:layout_constraintVertical_bias="0.593"
                android:scrollbars="horizontal|vertical">
            <TableLayout
                    android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#ffffff"
                    android:stretchColumns="0" android:id="@+id/myTable" android:visibility="visible">
                <!--tools:layout_editor_absoluteX="70dp" tools:layout_editor_absoluteY="390dp"-->
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>
    <Button
            android:text="Insert Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonActivity2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/scrollView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>